<%= form_for(payment) do |f| %>
    <% if payment.error.any? %>
        <h2><%= pluralize(payment.error.count, "Error") %> evitaton que el paso se guardara</h2>
    <%end%>
    
    <div class="field">
        <%= f.hidden_field :post_id, value: post.id %>
    </div>
    
    <div class="actions">
        <%= content_tag :button, type: :submit, class: "btn btn-success" do %>
            <i class="fa fa-shopping-cart"> Comprar</i>
        <%end%>
    </div>

<%end%>